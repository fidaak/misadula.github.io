source "https://rubygems.org"

# Specify the github-pages version according to the current dependency versions
gem "github-pages", "231", group: :jekyll_plugins

# The github-pages gem already includes Jekyll and other dependencies,
# so you don't need to include them separately.

# Add webrick, which is no longer a default gem in Ruby 3.0.0 and above
gem "webrick"

group :jekyll_plugins do
  # Add other Jekyll plugins here, if necessary, that are not already included
  # in the github-pages gem.
end